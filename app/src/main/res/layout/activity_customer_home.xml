<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="an.bill_using_barcode.CustomerHome"
    android:background="@drawable/billpay">

    <Button
        android:id="@+id/b1"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="177dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:onClick="listing"
        android:text="make my list" />

    <Button
        android:id="@+id/b2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/b1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="83dp"
        android:background="#FFFFFF"
        android:onClick="billing"
        android:text="bill my items" />


</RelativeLayout>
